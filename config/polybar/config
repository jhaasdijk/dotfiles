[colors]
bg   = "#252a32"
blk  = "#272c34"
bblk = "#222222"
#bblk = "#3b434f"
fg   = "#bab7b5"
red  = "#876058"
grn  = "#6f7f71"
ylw  = "#b39580"
blu  = "#546780"
mag  = "#84787d"
cyn  = "#556f86"
wht  = "#bab7b5"
bred = "#876058"
bgrn = "#6f7f71"
bylw = "#b39580"
bblu = "#546780"
bmag = "#84787d"
bcyn = "#556f86"
bwht = "#dfdedd"

i3_01 = "#999999"
i3_02 = "#000000"
i3_03 = "#ffffff"
i3_04 = "#c4c4c4"
i3_05 = "#454545"
i3_bg = "#202020"

[glyphs]
date = ""
backlight = ""
volume = " "
muted = " "
cpu = " "
ram = " "
connected = ""
disconnected = ""
charging = ""
discharging = ""
full = ""

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/base]
;monitor = ${env:MONITOR:LVDS1}
;monitor = ${env:MONITOR:VGA1}

width    = 100%
height   = 20
offset-x = 0
offset-y = 0

background   = ${colors.bblk}
foreground   = ${colors.fg}
border-color = ${colors.bblk}

font-0 = fixed:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = "Wuncon Siji:pixelsize=25:size=22;1"

modules-left   = i3
modules-center =
modules-right  = essid filesystem volume backlight temperature ram cpu battery date

tray-position = right
tray-padding = 2

border-size = 2

padding-left        = 0
padding-right       = 0
module-margin-left  = 1
module-margin-right = 0

bottom = false

[module/network]
type          = internal/network
interface     = wlp3s0
ping-interval = 3

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.bg}

[module/date]
type                     = internal/date
interval                 = 1
date                     = " %I:%M"
format-prefix            = ${glyphs.date}
format-padding           = 2

format-background        = ${colors.fg}
format-foreground        = ${colors.bg}

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = false

format = <label>
format-prefix = ${glyphs.backlight}
format-padding    = 1

label=%percentage%%
label-padding = 1

format-background = ${colors.ylw}
format-foreground = ${colors.bg}

[module/volume]
type = internal/alsa

format-volume = <label-volume>
format-muted = <label-muted>

label-muted             = muted
label-muted-padding     = 1

format-volume-prefix = ${glyphs.volume} 
format-muted-prefix  = ${glyphs.muted} 

format-volume-padding = 2
format-muted-padding    = 2

format-volume-background = ${colors.mag}
format-muted-background  = ${colors.mag}

format-volume-foreground = ${colors.bg}
format-muted-foreground  = ${colors.bg}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.bg}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.bg}

[module/cpu]
type                     = internal/cpu
label                    = "%percentage%%"
label-padding            = 1
format-padding           = 2
format-prefix            = ${glyphs.cpu}

format-background = ${colors.grn}
format-foreground = ${colors.bg}

[module/ram]
type     = internal/memory
interval = 3

format           = <label>
format-padding   = 2
label            = "%percentage_used%%"

format-prefix = ${glyphs.ram}
format-background = ${colors.blu}
format-foreground = ${colors.bg}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.fg}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.i3_01}
label-focused-foreground = ${colors.i3_02}
label-focused-underline = 
label-focused-padding    = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${colors.i3_05}
label-unfocused-foreground = ${colors.i3_03}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.i3_04}
label-urgent-foreground = ${colors.red}
label-urgent-padding    = 2

; Separator in between workspaces
; label-separator = |

[module/essid]
inherit = module/network

format-connected = <label-connected>

format-connected-prefix            = ${glyphs.connected}
format-connected-prefix-padding    = 0
format-connected-prefix-foreground = ${colors.mag}

label-connected            = "%essid%"
label-connected-padding    = 1

format-disconnected = <label-disconnected>

format-disconnected-prefix            = ${glyphs.disconnected}
format-disconnected-prefix-padding    = 0
format-disconnected-prefix-foreground = ${colors.mag}

label-disconnected            = "disconnected"
label-disconnected-padding    = 1

[module/battery]
type          = internal/battery
full-at       = 98
battery       = BAT0
adapter       = AC0
poll-interval = 5

format-charging-prefix      = ${glyphs.charging}
format-discharging-prefix   = ${glyphs.discharging}
format-full-prefix          = ${glyphs.full}

label-charging      = " %percentage%% "
label-discharging   = " %percentage%% "
label-full          = " %percentage%% "

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding    = 1

format-charging-background = ${colors.grn}
format-discharging-background = ${colors.red}
format-full-background    = ${colors.ylw}

format-charging-foreground = ${colors.bg}
format-discharging-foreground = ${colors.bg}
format-full-foreground    = ${colors.bg}

[settings]
screenchange-reload = true

