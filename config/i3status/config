# General settings

general {
    output_format = "i3bar"
    colors        = false
    interval      = 5
    separator     = ""
    markup        = pango
}

# Order settings
order += "volume master"
order += "disk /"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery all"
order += "tztime local"

# Modules

disk "/" {
    format = "<span background='#ffb536'> / </span><span background='#c5c8c6'> %percentage_used </span>"
}

battery all {
    format = "<span background='#ff5c57'> BAT: </span><span background='#c5c8c6'> %status / %percentage / %remaining </span>"
    format_down = "<span background='#ff5c57'> BAT: </span><span background='#c5c8c6'> No battery </span>"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

cpu_usage {
    format = "<span background='#64964a'> CPU: </span><span background='#c5c8c6'> %usage </span>"
    max_threshold = 85
}

cpu_temperature 0 {
    format = "<span background='#4fc84b'> T: </span><span background='#c5c8c6'> %degrees °C </span>"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
    max_threshold = 85
    format_above_threshold = "<span background='#4fc84b'> Warning T above threshold: </span><span background='#c5c8c6'> %degrees °C </span>"
}

volume master {
    format = "<span background='#8abeb7'> VOL: </span><span background='#c5c8c6'> %volume </span>"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "<span background='#b294bb'> T: </span><span background='#c5c8c6'> %time </span>"
    format_time = "%H:%M %d/%m"
}

